<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkgreen"
    tools:context=".TestQuestions">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.0dip"
            android:layout_marginTop="16.0dip"
            android:freezesText="true"
            android:text="Score : 0"
            android:textColor="@color/white"
            android:textSize="18.0sp" />

        <TextView
            android:id="@+id/completeQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.0dip"
            android:freezesText="true"
            android:text="Questions: 1/x"
            android:textColor="@color/white"
            android:textSize="18.0sp"
            android:layout_below="@id/score"/>

        <TextView
            android:id="@+id/timeLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.0dip"
            android:layout_marginRight="16.0dip"
            android:freezesText="true"
            android:text="00:30"
            android:textColor="@color/white"
            android:textSize="30.0sp"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.0dip"
            android:layout_marginTop="30.0dip"
            android:layout_marginRight="16.0dip"
            android:freezesText="true"
            android:maxLines="4"
            android:text="Questions Goes Here"
            android:textColor="@color/white"
            android:textSize="24.0sp"
            android:layout_below="@id/completeQuestion"/>

        <RadioGroup
            android:id="@+id/radiogroug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.0dip"
            android:layout_marginTop="16.0dip"
            android:layout_marginRight="16.0dip"
            android:layout_below="@id/question">

            <RadioButton
                android:id="@+id/radioFirst"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:layout_weight="1.0"
                android:text="RadioButton"
                android:background="@drawable/shape_round"
                android:freezesText="true"
                android:textColor="@color/white"
                android:textSize="20.0dip"/>

            <RadioButton
                android:id="@+id/radioSecond"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/shape_round"
                android:freezesText="true"
                android:text="RadioButton"
                android:textColor="@color/white"
                android:textSize="20.0dip"/>

            <RadioButton
                android:id="@+id/radioThird"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/shape_round"
                android:freezesText="true"
                android:text="RadioButton"
                android:textColor="@color/white"
                android:textSize="20.0dip"/>

            <RadioButton
                android:id="@+id/radioFour"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/shape_round"
                android:freezesText="true"
                android:text="RadioButton"
                android:textColor="@color/white"
                android:textSize="20.0dip" />
        </RadioGroup>

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:background="@drawable/next_button"
            android:text="CONFIRM"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>